package object;
//객체 복습
/*
 * 클래스명 : Emp
 * -name : String
 * -dept : String
 * -salary : int
 * 
 * +setEmp(name:String, dept:String, salary:int):void
 * +printEmp():void
 * --홍길동 사원은 개발부에 근무하며 1520000원의 급여를 받아요
 */
class Emp3{
	//filed
	private String name;
	private String dept;
	private int salary;
	
	//getter setter 사용
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getDept() {
		return dept;
	}
	public void setDept(String dept) {
		this.dept = dept;
	}
	public int getSalary() {
		return salary;
	}
	public void setSalary(int salary) {
		this.salary = salary;
	}
	
	
	
	
}

public class ObjectTest3 {
	
	public static void main(String[] args) {
		//객체생성
		Emp3 ob=new Emp3();
		ob.setName("강호동"); //값 입력
		ob.setDept("개발부");
		ob.setSalary(120000);
		ob.printEmp(); //출력
		

	}

}
