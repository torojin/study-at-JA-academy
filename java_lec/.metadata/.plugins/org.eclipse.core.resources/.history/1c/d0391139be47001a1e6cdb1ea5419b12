package ifEx;
/**
 * 
 * @author user
 * else if 대신 if문으로 조건을 걸어서 쓰려면 변수 선언시 변수를 미리 초기화해줘야 사용가능
 *  -> 거의 사용안하지만 금융권에서는 사용함
 */
public class IfEx1 {

	public static void main(String[] args) {
		
		int score = 95;
		char grade = '\0';
		
		if(score >= 90 && score <= 100)
			grade = 'A';
		if(score >= 80 && score < 90)
			grade = 'B';
		
		
		
		/*
		// if~else~if문
		int score = 65;
		char grade;
		
		if(score >= 90)
			grade = 'A';
		else if(score >= 80)
			grade = 'B';
		else if(score >= 70)
			grade = 'C';
		else if(score >= 60)
			grade = 'D';
		else
			grade = 'F';
		System.out.println("점수는 "+score+"점 이고 학점은"+grade+"입니다.");*/
		
		
		/*
		// if ~ else 문
		int score = 45;
		
		if(score >= 60) {
			System.out.println("합격");
			System.out.println("점수는 "+score+"점입니다");
		} else {
			System.out.println("불합격");
			System.out.println("점수는 "+score+"점이며 다음 기회에...");
		}*/
		
		
		/*
		String str = "korea";
		
		if(str == "korea") {
			System.out.println("대한민국");
		}
		
		System.out.println("*************");
		*/
	}

}
