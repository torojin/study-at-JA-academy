package Shape;
/*
 * +Triangle()
 * +Triangle(x:int, y:int)
 * +getSize():double
 */
public class Triangle extends Shape{
	//디폴트 생성자 생성
	public Triangle() {
		super();
	}
	//매개변수 생성자 생성
	public Triangle(int x, int y) {
		super(x,y);
	}
	public double getSize() {
		
		return (getX()*getY())/2.0;
	}

}
